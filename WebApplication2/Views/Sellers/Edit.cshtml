@model WebApplication2.Models.ViewModels.SellerFormViewModel
<!--com a declaração de modelo os labels inputs e etc...entendem o atributo name, email etc-->
@{ ViewData["Title"] = "Edit";}

<h2>Edit</h2>

<h4>Sellers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--identificador hidden-->
            <input type="hidden" asp-for="Seller.Id" />

            <!--Nome-->
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label"></label>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger" data-val-required="Oops! Don't forget your Name!"></span>
                <hr />
                <label asp-for="Seller.Email" class="control-label"></label>
                <input type="email" asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
                <hr />
                <label asp-for="Seller.BirthDate" class="control-label"></label>
                <input type="date" asp-for="Seller.BirthDate" class="form-control" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger" data-val-required="Don't forget the birthDate!"></span>
                <hr />
                <label asp-for="Seller.Salary" class="control-label"></label>
                <input type="number" asp-for="Seller.Salary" class="form-control" />
                <span asp-validation-for="Seller.Salary" class="text-danger"></span>
                <hr />
                <label asp-for="Seller.DepartmentsId" class="control-label"></label>
                <select asp-for="Seller.DepartmentsId" asp-items="@(new SelectList(Model.DepartmentsList , "Id" , "Nome"))" class="form-control">
                </select>
                <span asp-validation-for="Seller.DepartmentsId" class="text-danger"></span>
                <hr />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
